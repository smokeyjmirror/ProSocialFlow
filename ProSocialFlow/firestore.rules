rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to topic history for all users.
    // Allow write access only to authenticated server processes (like our Genkit flow),
    // which prevents unauthorized client-side modifications.
    match /topic_history/{category} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
